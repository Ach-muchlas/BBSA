<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/cardCustomers"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/cardSalesResult"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardCustomers" />


        <include
            android:id="@+id/cardDepositCustomerWaste"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardSalesResult" />

        <include
            android:id="@+id/cardWasteDeposit"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardDepositCustomerWaste" />

        <include
            android:id="@+id/cardDepositHistory"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardWasteDeposit" />

        <include
            android:id="@+id/cardBalanceWithdrawalHistory"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardDepositHistory" />

        <include
            android:id="@+id/cardNews"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardBalanceWithdrawalHistory" />

        <include
            android:id="@+id/cardWasteInformation"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardNews" />

        <include
            android:id="@+id/cardCustomersReport"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardWasteInformation" />

        <include
            android:id="@+id/cardSchedulingWastePickup"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cardCustomersReport" />

        <include
            android:id="@+id/cardSchedulingOpenWarehouse"
            layout="@layout/item_content_menu_card"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSchedulingWastePickup"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>