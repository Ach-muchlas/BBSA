<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.admin.menu.update_price.UpdatePriceWasteFragment">

    <include
        android:id="@+id/viewAppBar"
        layout="@layout/custom_app_bar_button_and_title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        app:layout_constraintTop_toBottomOf="@id/viewAppBar"
        android:id="@+id/card"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp"
        android:layout_height="60dp">

        <TextView
            style="@style/TextContent.Body.PopMedium"
            android:text="@string/example_type_waste_2"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/card"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="60dp">

        <EditText
            android:hint="Rp.2.000/kg"
            android:textColor="@color/deep_green"
            android:textColorHint="@color/deep_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/custom_full_corner"
            android:autofillHints="" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>