<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textBalance"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="@string/balance"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textValueBalance"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="@string/example_balance"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/textBalance"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dividerBalance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            app:dividerColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/textValueBalance" />

        <TextView
            android:id="@+id/textTemporaryBalance"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/temporary_balance"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerBalance" />

        <TextView
            android:id="@+id/textValueTemporaryBalance"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginTop="12dp"
            android:text="@string/example_balance"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/textValueBalance"
            app:layout_constraintTop_toBottomOf="@id/dividerBalance" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dividerTemporaryBalance"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="28dp"
            app:dividerColor="@color/grey"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textValueTemporaryBalance"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>