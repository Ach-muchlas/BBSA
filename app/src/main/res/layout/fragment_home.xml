<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    tools:context=".ui.customers.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/viewAppBar"
            layout="@layout/custom_app_bar_profile"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/cardBalance"
            layout="@layout/custom_card_balance"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="17dp"
            android:elevation="25dp"
            app:layout_constraintBottom_toBottomOf="@id/viewAppBar"
            app:layout_constraintTop_toBottomOf="@id/viewAppBar" />

        <include
            android:id="@+id/menuDeposit"
            layout="@layout/custom_menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@id/cardBalance"
            app:layout_constraintTop_toBottomOf="@id/cardBalance" />

        <include
            android:id="@+id/menuWithdrawBalance"
            layout="@layout/custom_menu"
            android:layout_width="100dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toStartOf="@id/menuPickUpWaste"
            app:layout_constraintStart_toEndOf="@id/menuDeposit"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardBalance" />

        <include
            android:id="@+id/menuPickUpWaste"
            layout="@layout/custom_menu"
            android:layout_width="100dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="@id/cardBalance"
            app:layout_constraintTop_toBottomOf="@id/cardBalance" />

        <include
            android:id="@+id/menuHistoryDeposit"
            layout="@layout/custom_menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/menuWithdrawBalance"
            app:layout_constraintStart_toStartOf="@id/menuDeposit"
            app:layout_constraintTop_toBottomOf="@id/menuDeposit" />

        <include
            android:id="@+id/menuTypeWaste"
            layout="@layout/custom_menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="@id/menuPickUpWaste"
            app:layout_constraintStart_toEndOf="@id/menuWithdrawBalance"
            app:layout_constraintTop_toBottomOf="@id/menuDeposit" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menuHistoryDeposit"
            tools:itemCount="2"
            tools:listitem="@layout/item_content_news" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>