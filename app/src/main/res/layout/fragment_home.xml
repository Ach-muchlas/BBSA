<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    tools:context=".ui.home.HomeFragment">

    <include
        android:id="@+id/viewAppBar"
        layout="@layout/custom_app_bar_profile"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/cardBalance"
        layout="@layout/custom_card_balance"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="17dp"
        android:elevation="25dp"
        app:layout_constraintBottom_toBottomOf="@id/viewAppBar"
        app:layout_constraintTop_toBottomOf="@id/viewAppBar" />

    <include
        android:id="@+id/menuDeposit"
        layout="@layout/custom_menu"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBalance" />

    <include
        android:id="@+id/menuWithdrawBalance"
        layout="@layout/custom_menu"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toEndOf="@id/menuDeposit"
        app:layout_constraintTop_toBottomOf="@id/cardBalance" />

    <include
        android:id="@+id/menuPickUpTrash"
        layout="@layout/custom_menu"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toEndOf="@id/menuWithdrawBalance"
        app:layout_constraintTop_toBottomOf="@id/cardBalance" />

    <include
        android:id="@+id/menuHistory"
        layout="@layout/custom_menu"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toStartOf="@id/menuWithdrawBalance"
        app:layout_constraintStart_toStartOf="@id/menuDeposit"
        app:layout_constraintTop_toBottomOf="@id/menuDeposit" />

    <include
        android:id="@+id/menuTypeWaste"
        layout="@layout/custom_menu"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="@id/menuPickUpTrash"
        app:layout_constraintStart_toEndOf="@id/menuWithdrawBalance"
        app:layout_constraintTop_toBottomOf="@id/menuDeposit" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuHistory"
        tools:itemCount="2"
        tools:listitem="@layout/item_content_news" />
</androidx.constraintlayout.widget.ConstraintLayout>