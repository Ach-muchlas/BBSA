<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textHistoryTotalDeposit"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/history_total_deposit"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textValueHistoryTotalDeposit"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:text="@string/example_history_deposit"
            android:textSize="14sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/textHistoryTotalDeposit"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dividerHistoryTotalDeposit"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            app:dividerColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/textValueHistoryTotalDeposit" />

        <TextView
            android:id="@+id/textHistoryTotalWithdrawal"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/history_total_withdrawal"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerHistoryTotalDeposit" />

        <TextView
            android:id="@+id/textValueHistoryTotalWithdrawal"
            style="@style/TextContent.Body.PopLight"
            android:layout_marginTop="12dp"
            android:text="@string/example_balance"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/textValueHistoryTotalDeposit"
            app:layout_constraintTop_toBottomOf="@id/dividerHistoryTotalDeposit" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dividerHistoryTotalWithdrawal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="28dp"
            app:dividerColor="@color/grey"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textValueHistoryTotalWithdrawal"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>