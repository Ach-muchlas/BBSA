<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customers.account.AccountFragment">

    <include
        android:id="@+id/viewAppBar"
        layout="@layout/custom_app_bar_profile"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/cardMenuAccount"
        layout="@layout/card_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/viewAppBar" />
</androidx.constraintlayout.widget.ConstraintLayout>