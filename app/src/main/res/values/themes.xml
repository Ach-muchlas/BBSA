<resources>

    <style name="Base.Theme.BBSA" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.BBSA" parent="Base.Theme.BBSA" />

    <style name="TextContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextContent.HeadlineMon">
        <item name="fontFamily">@font/mon_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="TextContent.Headline">
        <item name="fontFamily">@font/pop_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Body">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <!--Text font Montserrat Medium-->
    <style name="TextContent.Body.MonMedium">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mon_reg</item>
    </style>

    <!--Text font Montserrat Bold-->
    <style name="TextContent.Body.MonBold">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mon_bold</item>
    </style>

    <!--Text font Poppins Reg-->
    <style name="TextContent.Body.PopReg">
        <item name="fontFamily">@font/pop_reg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Body.PopReg.TopBar">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Text font Poppins Medium-->
    <style name="TextContent.Body.PopMedium">
        <item name="fontFamily">@font/pop_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Text font Poppins Light-->
    <style name="TextContent.Body.PopLight">
        <item name="fontFamily">@font/pop_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Text font Poppins Semi Bold-->
    <style name="TextContent.Body.PopSemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pop_semi_bold</item>
    </style>

    <!--Text font Poppins Bold-->
    <style name="TextContent.Body.PopBold">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pop_bold</item>
    </style>

    <!--small sp-->
    <style name="TextContent.Body.PopReg.SmallSp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextContent.Body.MonMedium.SmallSp">
        <item name="android:textSize">10sp</item>
    </style>

    <!--Edit Text Style-->
    <style name="EditTextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="fontFamily">@font/pop_medium</item>
        <item name="android:background">@drawable/custom_bg_edit_text</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="EditTextContent.Search">
        <item name="android:background">@drawable/custom_bg_search</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
    </style>

    <style name="EditTextContentOtp">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="fontFamily">@font/pop_medium</item>
        <item name="android:background">@drawable/custom_bg_edit_text_otp</item>
        <item name="android:inputType">number</item>
    </style>

    <!--Button Style-->
    <style name="ButtonContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/deep_green</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/pop_semi_bold</item>
    </style>


</resources>